{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "./contracts",
    "./scripts",
    "./eth-sdk",
    "./utils",
    "./tasks/*",
    "./test",
    "./types",
    "./typechain-types"
  ],
  "files": ["./hardhat.config.ts", "./types/index.ts"]
}
